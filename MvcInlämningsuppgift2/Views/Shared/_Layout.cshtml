<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tomasos Pizzeria</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/MinStyleSheet.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
</head>
<body>
    <div class="container">
        <div class="jumbotron"><center><img src="~/logo41.png" /></center></div>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand">Tomasos Pizzeria</a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="@Url.Content("~/Home/Start")">Hem</a>
                    </li>

                    <li><a id="btnMen" href="@Url.Content("~/Home/Meny")">Meny</a></li>
                    <li><a href="@Url.Content("~/Home/Kontakt")">Kontakt</a></li>
                </ul>
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <ul id="anv" class="nav navbar-nav navbar-right">
                        <li><a href="#"><span class="glyphicon glyphicon-edit"></span>ÄndraUppgifter @Html.ActionLink(" ", "Uppdatera", "Account")</a></li>
                        <li><a href="#"><span class="glyphicon glyphicon-user"></span> Användaren: @HttpContext.Current.User.Identity.Name </a></li>
                        
                        <li><span class="glyphicon glyphicon-log-out"></span>@Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "navbar-brand" })</li>
                    </ul>
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Content("~/Account/Registerera")"><span class="glyphicon glyphicon-user"></span> Registerera</a></li>
                        <li><a href="@Url.Content("~/Account/Login")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    </ul>
                }
               
            </div>
        </nav>

        <div class="container body-content">
            <div class="col-sm-10">


                @RenderBody()
            </div>
            <div id="VarukorgVisa" class="col-sm-2">

            </div>
            @*<hr />
            <footer>
                <p>Tomatsos Pizzeria-2016 Hornsgatan 23,Södermalm</p>
            </footer>*@
        </div>

    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>